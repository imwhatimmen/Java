
public class Persona {
	//Atributos
	int edad;
	String nombre;
	String apellidos;
	char colorPelo;
	//Constructor //Se llama como la clase
	Persona(int edad,String nombre,String apellidos,char colorPelo){
		this.edad=edad;
		this.nombre=nombre;
		this.apellidos=apellidos;
		this.colorPelo=colorPelo;
	}
	//MÃ©todos //meter y devolder info  (nombre y tipo)
	//cambia edad
	void setEdad(int nuevaEdad){
		edad=nuevaEdad;
	}
	//cambia el nombre
	void setNombre(String nuevoNombre){
		nombre=nuevoNombre;
	}
	//cambia el pelo
	void setColorPelo(char nuevoColorPelo){
		colorPelo=nuevoColorPelo;
	}
	String devuelveNombre(){
		return nombre;
	}                           

}
